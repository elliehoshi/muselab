<% if current_user %>

<div class="createidea">	
		<h1>POST YOUR IDEA</h1>
		<%= form_for @idea do |idea| %>

		<div class="container show">
			<%= idea.text_field :title, :class => 'form-control', :placeholder => "Enter Your Idea Name" %>

			<br>CATEGORY TEST<br>
			<select class="form-control">
				<option value="Art">Art</option>
				<option value="Design">Design</option>
			</select>
			<br>
			<!-- end test -->
			<%#= f.select(:option, options_for_select([['Meet For:', 1], ['Coffee', 2], ['Alcohol', 3], ['Bars', 4], ['Food', 5]], disabled: true)) %>

			<%#= idea.select :category, options_for_select(['Category:', 1], ['***']) => "Category" %><br>

			<%= idea.select :category, Category.all.map{ |c| [c.name]}, :prompt => "Select One" %><br>

			<%= idea.text_area :blurb, :class => 'form-control', :placeholder => "Description", :rows => "8" %>

			<br>

			<%= idea.text_field :tag, :class => 'form-control', :placeholder => "tag" %>

			<br>
				<%= idea.submit "submit", :class => 'form-control' %>

		<% end %>
	</div>
</div>

<% else %>
<div class="container">
	<div class="alert alert-danger">Please log in to continue</div>
</div>

<div class="btn btn-default btn-lg" role="button"><%= link_to 'Log In', new_auth_path %></div>

<div class="btn btn-info btn-lg" role="button"><%= link_to 'Sign Up', new_user_path %></div>
<% end %>
