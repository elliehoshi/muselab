<% if current_user %>
<div class="createidea">	
		<h1>Post Your Idea</h1>
		<%= form_for @idea do |idea| %>
			<%= idea.text_field :title, :placeholder => "Enter Your Idea Name" %><br>
			<br>CATEGORY TEST<br>
			<select>
				<option value="Art">Art</option>
				<option value="Design">Design</option>
			</select>
			<br>
			<!-- end test -->
			<%= idea.text_field :category, :placeholder => "Category" %><br>
			<%= idea.text_field :blurb, :placeholder => "blurb" %><br>
			<%= idea.text_field :tag, :placeholder => "tag" %><br>
		<%= idea.submit "submit" %>
		<% end %>
		
		<br>

		<div class="container">
			<div class="col-md-6">
				<textarea class="form-control" rows="3"></textarea>
			</div>
		</div>
</div>

<% else %>
<h1>You must be logged in
<br><%= link_to 'Log In', new_auth_path %>
<br><%= link_to 'Sign Up', new_user_path %>
</h1>
<% end %>
