<% if current_user %>

<div class="createidea">	
		<h1>POST YOUR IDEA</h1>
		<%= simple_form_for @idea do |idea| %>

		<div class="container show">
			<%= idea.text_field :title, :class => 'form-control', :placeholder => "Enter Your Idea Name" %>

			<br>CATEGORY TEST<br>
			<select class="form-control">
				<option value="Art">Art</option>
				<option value="Design">Design</option>
			</select>
			<br>

			<!-- <fieldset>
				<legend>Select Category</legend>
				<%#= idea.collection_check_boxes :category_id, Category.all, :id, :name %>
			</fieldset> -->
			

			<%= idea.association :category, as: :select, :prompt => "Select One" %><br>


			<%= idea.text_area :blurb, :class => 'form-control', :placeholder => "Description", :rows => "8" %>

			<br>

			<%= idea.text_field :tag, :class => 'form-control', :placeholder => "tag" %>

			<br>
				<%= idea.submit "submit", :class => 'form-control' %>

		<% end %>
	</div>
</div>

<% else %>
	<div class="alert alert-danger">Please log in to continue</div>

	<div class="browse">
		<%= link_to new_auth_path do %>
		<div class="well col-xs-6  col-sm-6 col-md-6">
		<%= image_tag("login.svg", class: "img-circle img-thumbnail3") %>
		
		<br>
		
		<%= link_to 'Log In', new_auth_path, class: "btn btn-default btn-lg"%></div>
		<% end %>

		<div class="well col-xs-6  col-sm-6 col-md-6">
		<%= image_tag("signup.svg", class: "img-circle img-thumbnail3") %>

		<br>
		<div class="btn btn-info btn-lg" role="button"><%= link_to 'Sign Up', new_user_path %></div>
		</div>
		<% end %>
	</div>

